<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="RoundCardView" parent="CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <!-- BottomSheetDialogFragment의 스타일을 지정하는 아이템 -->
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <!-- BottomSheetDialogFragment의 높이를 지정하는 속성 -->
        <item name="android:layout_height">300dp</item>
        <!-- BottomSheetDialogFragment의 모양을 지정하는 속성 -->
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="AppShapeAppearanceBottomSheetDialog" parent="">
        <!-- BottomSheetDialogFragment의 모서리를 둥글게 만드는 속성 -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>
</resources>